{
  "name": "mofo-ui",
  "version": "1.4.1",
  "description": "React component library for Mozilla Foundation",
  "main": "dist/mofo-ui.js",
  "engines": {
    "node": "^6.0.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "build:demo": "shx mkdir -p demo/js && shx mkdir -p demo/css && shx cp dist/mofo-ui.css demo/css/ && shx cp dist/mofo-ui.js demo/js/",
    "build:js": "webpack",
    "build:scss": "node-sass src/main.scss dist/mofo-ui.css",
    "build": "npm run build:js && npm run build:scss && npm run build:demo",
    "deploy": "node deploy.js",
    "server": "live-server ./demo --port=1615",
    "start": "npm i && npm run build && npm-run-all --parallel server watch",
    "test": "eslint --config ./.eslintrc.yaml 'src/**/*.js' 'src/**/*.jsx' '*.js'",
    "watch:dist": "chokidar 'dist/*' -c 'npm run build:demo'",
    "watch:js": "chokidar 'src/**/*.jsx' -c 'npm run build:js'",
    "watch:scss": "chokidar 'src/**/*.scss' -c 'npm run build:scss'",
    "watch": "npm-run-all --parallel watch:**",
    "preversion": "git checkout master && git pull mozilla master",
    "version": "npm run build",
    "postversion": "npm publish && git push mozilla master && git push mozilla --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gvn/mofo-ui.git"
  },
  "author": "Mozilla",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/gvn/mofo-ui/issues"
  },
  "homepage": "https://github.com/gvn/mofo-ui#readme",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0"
  },
  "dependencies": {
    "dompurify": "0.8.2",
    "rc-collapse": "1.6.3"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chokidar": "^1.4.3",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.1.1",
    "eslint-plugin-react": "^5.2.2",
    "live-server": "^0.9.2",
    "mofo-bootstrap": "^1.0.1",
    "mofo-style": "^2.4.0",
    "node-sass": "^3.4.2",
    "nodegit": "^0.14.1",
    "npm-run-all": "^1.7.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "shelljs": "^0.7.0",
    "shx": "^0.1.2",
    "webpack": "^1.12.14"
  }
}
